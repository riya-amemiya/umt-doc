{
    "$schema": "https://turbo.build/schema.json",
    "tasks": {
        "build": {
            "outputs": [
                "dist"
            ],
            "inputs": [
                "./src/**",
                "./public/**",
                "./package.json",
                "./tailwind.config.mjs",
                "./tsconfig.json"
            ],
            "env": [
                "MICROCMS_*"
            ]
        },
        "dev": {
            "persistent": true
        }
    },
    "globalDependencies": [
        "tsconfig.json",
        "jest.config.js",
        ".eslintrc",
        ".env.*",
        "biome.json",
        "yarn.lock"
    ]
}